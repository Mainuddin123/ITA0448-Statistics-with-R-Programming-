setClass("ABOUT_FRUITS", fruits <- list(name="character", Quantity="numeric",cost="numeric"))

fruit <- new("ABOUT_FRUITS", name = "banana", Quantity = 25, cost = 250)

fruit


fruits <- list(name=" apple",Quantity= 3,cost=100)
class(fruits) <- "ABOUT_FRUITS"
fruits

